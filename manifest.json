{
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  },
  "description": "Focus on your code, not your settings.",
  "icons": {
    "128": "assets/img/Simple_icon.png"
  },
  "manifest_version": 2,
  "offline_enabled": true,
  "name": "Simple",
  "permissions": [{
      "fileSystem": [
        "write"
      ]
    },
    "unlimitedStorage",
    "contextMenus"
  ],
  "version": "2.3.1",
  "file_handlers": {
    "text": {
      "types": [
        "text/*"
      ]
    }
  }
}
